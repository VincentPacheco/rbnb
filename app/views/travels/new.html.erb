<div class="form-container">
  <div class ="form-border">
    <div class="form">
      <h2>Add a trip</h2>
      <br>
        <%= simple_form_for(@travel) do |f| %>

        <%= f.input :title, label: 'Destination', placeholder: 'Type your destination' %>
        <%= f.input :description, label: 'Title', placeholder: 'Give a title to your trip'  %>
        <%= f.input :longdescription, label: 'Description', placeholder: 'Enter a description of the journey'  %>
        <%= f.input :address, label: 'Departure from', placeholder: 'Type your departure city'   %>
        <%= f.input :duration, label: 'Duration', placeholder: 'How many days will the trip last?'  %>
        <%= f.input :capacity, label: 'Capacity', placeholder: 'How many sits are availables?'  %>
        <%= f.input :price, label: 'Price', placeholder: 'Enter the price (â‚¬)'  %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
