<div class="d-flex justify-content-around" style="width: 100%">
  <%= simple_form_for [travel, booking] do |f| %>
    <%= f.input :date, required: false, input_html: {class: "datepicker"}, placeholder: 'Choose your departure date' %>
    <%= f.text_area :note, :style => "line-height: 50px; width: 400px", placeholder: 'Add a comment here'  %>
    <br>
    <br>
    <%= f.submit "Book", class: "btn btn-primary", :style => "background-color: #4e00b0" %>
    <br>
    <br>
  <% end %>
</div>

