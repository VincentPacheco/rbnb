<div class="container text-center">
  <h2>Welcome to the Bookings section</h2>
  <p><%= link_to "add a new travel", travels_path%></p>

    <% @bookings.each do |booking| %>
    <% if current_user == booking.user %>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <h3><%= booking.date %></h3>
          <p><%= booking.note %></p>
            <%= link_to "show", booking_path(booking), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <% end %>
</div>
